{% extends 'layout.twig' %}

{% block title %}Galeria{% endblock %}

{% block content %}

    <div class="clear"></div>
</header><!-- header end -->


<div class="content galeria">
    <article>
        <h1> Galeria </h1>
            {%  if photos|length > 0 %}
                {% for photo in photos %}
                    <div>
                        <img class="lightbox_trigger" id="{{ photo.id }}" src="{{ app.request.basepath }}/media/post/{{ photo.name }}.jpg" alt="zdjęcie"/>
                        <p class="hidden"> {{ photo.description }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <p>
                    Niedługo dodamy zdjęcia z wydarzeń.
                </p>
            {% endif %}

            <img class="lightbox_trigger" src="{{ app.request.basepath }}/media/layout/herb.jpg" alt="Herb Krakowskiej Legii Akademickiej przedstawiające herb Miasta Krakowa, uniwersytecki bieret oraz szarego wilka na czarnym tle." />
            <img class="lightbox_trigger" src="{{ app.request.basepath }}/media/layout/logo.jpg" alt="Logo Krakowskiej Legii Akademickiej przedstawiające szarego wilka na czarnym tle." /> 

        <div class="clear"></div>
    </article>
<div class="clear"></div>

{% endblock %}